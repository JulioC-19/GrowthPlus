<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".fragment.HorizontalEquation">

    <TextView
        android:id="@+id/equation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 + 2 = 3"
        android:textAlignment="center"
        android:textColor="@color/light_green"
        android:textSize="60sp"
        app:layout_constraintEnd_toStartOf="@id/guide10"
        app:layout_constraintStart_toStartOf="@id/guide0"
        app:layout_constraintTop_toTopOf="@id/guideline3" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayoutHorizontalEquationOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toStartOf="@id/gridLayoutHorizontalEquationTwo"
        app:layout_constraintStart_toStartOf="@id/guide0"
        app:layout_constraintTop_toBottomOf="@+id/equation"
        app:columnCount="3"
        app:rowCount="7">
    </androidx.gridlayout.widget.GridLayout>

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayoutHorizontalEquationTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toStartOf="@id/gridLayoutHorizontalEquationThree"
        app:layout_constraintStart_toStartOf="@id/gridLayoutHorizontalEquationOne"
        app:layout_constraintTop_toBottomOf="@+id/equation"
        app:columnCount="3"
        app:rowCount="7">
    </androidx.gridlayout.widget.GridLayout>

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayoutHorizontalEquationThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toStartOf="@id/guide10"
        app:layout_constraintStart_toEndOf="@+id/gridLayoutHorizontalEquationTwo"
        app:layout_constraintTop_toBottomOf="@+id/equation"
        app:columnCount="3"
        app:rowCount="7">
    </androidx.gridlayout.widget.GridLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".9" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".08" />


</androidx.constraintlayout.widget.ConstraintLayout>