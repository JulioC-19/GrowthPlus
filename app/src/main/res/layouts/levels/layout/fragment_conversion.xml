<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".fragment.Conversion">

    <TextView
        android:id="@+id/conversion_first_text"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="100 cm"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="75sp"
        app:layout_constraintStart_toStartOf="@id/guideline10"
        app:layout_constraintEnd_toEndOf="@id/guideline11"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/operator"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="="
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="65sp"
        app:layout_constraintTop_toBottomOf="@+id/conversion_first_text"
        app:layout_constraintStart_toStartOf="@id/guideline10"
        app:layout_constraintEnd_toEndOf="@id/guideline11" />

    <TextView
        android:id="@+id/conversion_second_text"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="1 dm"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="75sp"
        app:layout_constraintStart_toStartOf="@id/guideline10"
        app:layout_constraintEnd_toEndOf="@id/guideline11"
        app:layout_constraintTop_toBottomOf="@+id/operator" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".1"  />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".9"  />
</androidx.constraintlayout.widget.ConstraintLayout>