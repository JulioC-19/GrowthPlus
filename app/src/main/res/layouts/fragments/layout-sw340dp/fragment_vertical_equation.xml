<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="350dp"
    tools:context=".fragment.VerticalEquation">

    <ImageView
        android:id="@+id/barOne"
        android:visibility="invisible"
        android:layout_width="70dp"
        android:layout_height="250dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="40dp"
        android:background="@drawable/round_button"
        android:backgroundTint="@color/light_green"/>

    <ImageView
        android:id="@+id/boxOne"
        android:visibility="invisible"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_marginTop="140dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="40dp"
        android:background="@drawable/round_button"
        android:backgroundTint="@color/light_green"/>

    <ImageView
        android:id="@+id/barTwo"
        android:visibility="invisible"
        android:layout_width="70dp"
        android:layout_height="250dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/barOne"
        android:background="@drawable/round_button"
        android:backgroundTint="@color/light_green"/>

    <ImageView
        android:id="@+id/boxTwo"
        android:visibility="invisible"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="-5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/barOne"
        android:background="@drawable/round_button"
        android:backgroundTint="@color/light_green"/>

    <ImageView
        android:id="@+id/carryInput"
        android:visibility="invisible"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/barTwo"
        android:background="@drawable/round_button"
        android:backgroundTint="@color/grey"/>

    <TextView
        android:id="@+id/carryInputNum"
        android:fontFamily="@font/fredoka_one_regular"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:text="1"
        android:textAlignment="center"
        android:textColor="@color/dark_green"
        android:textSize="50sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/barTwo"/>

    <ImageView
        android:id="@+id/bar"
        android:layout_width="320dp"
        android:layout_height="10dp"
        android:layout_marginTop="260dp"
        android:background="@drawable/round_button"
        android:backgroundTint="@color/dark_green"
        android:src="@drawable/round_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/round_button" />

    <TextView
        android:id="@+id/first_number"
        android:fontFamily="@font/fredoka_one_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="50dp"
        android:text="1 7"
        android:textAlignment="center"
        android:textColor="@color/dark_green"
        android:textSize="75sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/second_number"
        android:fontFamily="@font/fredoka_one_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="27dp"
        android:text="23"
        android:textAlignment="center"
        android:textColor="@color/dark_green"
        android:textSize="75sp"
        app:layout_constraintBottom_toTopOf="@+id/bar"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/operator"
        android:fontFamily="@font/fredoka_one_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="27dp"
        android:text="+"
        android:textAlignment="center"
        android:textColor="@color/dark_green"
        android:textSize="75sp"
        app:layout_constraintBottom_toTopOf="@+id/bar"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/answer"
        android:fontFamily="@font/fredoka_one_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:text="40"
        android:textAlignment="center"
        android:textColor="@color/dark_green"
        android:textSize="75sp"
        app:layout_constraintTop_toBottomOf="@+id/bar"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>