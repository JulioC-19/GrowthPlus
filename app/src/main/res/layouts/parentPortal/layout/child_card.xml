<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

        <View
            android:id="@+id/childCardBack"
            android:layout_width="95dp"
            android:layout_height="95dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:id="@+id/childCardView"
            android:layout_width="95dp"
            android:layout_height="95dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/round_button"
            android:backgroundTint="@color/dark_green"/>

        <ImageView
            android:id="@+id/childCardAvatar"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/circle"
            android:backgroundTint="@color/blue"
            android:src="@mipmap/bunny_foreground"
            app:layout_constraintBottom_toBottomOf="@+id/childCardView"
            app:layout_constraintEnd_toEndOf="@+id/childCardView"
            app:layout_constraintHorizontal_bias="0.483"
            app:layout_constraintStart_toStartOf="@+id/childCardView"
            app:layout_constraintTop_toTopOf="@+id/childCardView"
            app:layout_constraintVertical_bias="0.228" />

        <TextView
            android:id="@+id/childCarName"
            android:fontFamily="@font/fredoka_one_regular"
            android:layout_width="95dp"
            android:layout_height="15dp"
            android:text="Name"
            android:autoSizeTextType="uniform"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="@+id/childCardAvatar"
            app:layout_constraintStart_toStartOf="@+id/childCardAvatar"
            app:layout_constraintTop_toBottomOf="@+id/childCardAvatar" />

</androidx.constraintlayout.widget.ConstraintLayout>