<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_green"
    tools:context=".childScreen">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/buttonStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.08" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/buttonEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.22" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/buttonS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.78" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/buttonE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.92" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/buttonTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.03" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/buttonBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.08" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bunnyBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.34" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/underName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="265dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/underBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.71" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.96" />

    <android.widget.Button
        android:id="@+id/backParentPortal"
        android:layout_width="60sp"
        android:layout_height="40sp"
        android:layout_marginStart="20dp"
        android:background="@drawable/round_button"
        android:backgroundTint="@color/blue"
        android:drawableStart="@drawable/back_arrow"
        android:paddingStart="17sp"
        android:paddingEnd="20sp"
        app:layout_constraintBottom_toTopOf="@id/buttonBottom"
        app:layout_constraintEnd_toStartOf="@id/buttonEnd"
        app:layout_constraintStart_toStartOf="@id/buttonStart"
        app:layout_constraintTop_toBottomOf="@id/buttonTop"/>

    <android.widget.Button
        android:id="@+id/deleteChildButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/red"
        android:drawableStart="@drawable/minus_large"
        android:gravity="center_horizontal|center_vertical"
        app:layout_constraintBottom_toTopOf="@id/buttonBottom"
        app:layout_constraintEnd_toStartOf="@id/buttonE"
        app:layout_constraintStart_toStartOf="@id/buttonS"
        app:layout_constraintTop_toBottomOf="@id/buttonTop" />

    <com.GrowthPlus.customViews.ChildAvatarComponent
        android:id="@+id/childAvatarScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/bunnyBottom"
        app:layout_constraintEnd_toStartOf="@id/buttonS"
        app:layout_constraintStart_toEndOf="@id/buttonEnd"
        app:layout_constraintTop_toBottomOf="@id/buttonBottom" />

    <com.GrowthPlus.customViews.ChildNameScoreComponent
        android:id="@+id/childNameAndScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/underName"
        app:layout_constraintEnd_toStartOf="@id/buttonE"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/buttonEnd"
        app:layout_constraintTop_toBottomOf="@id/bunnyBottom"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:layout_width="275dp"
        android:layout_height="170dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/underBar"
        app:layout_constraintEnd_toStartOf="@id/buttonE"
        app:layout_constraintStart_toEndOf="@id/buttonStart"
        app:layout_constraintTop_toBottomOf="@id/underName">

        <com.GrowthPlus.customViews.HorizontalProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.GrowthPlus.customViews.HorizontalProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.GrowthPlus.customViews.HorizontalProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.GrowthPlus.customViews.HorizontalProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/contentAreasGrid"
        android:layout_width="235dp"
        android:layout_height="180dp"
        android:background="@drawable/round_button"
        android:backgroundTint="@color/blue"
        android:paddingEnd="10dp"
        app:columnCount="2"
        app:layout_constraintBottom_toBottomOf="@id/end"
        app:layout_constraintEnd_toStartOf="@id/buttonS"
        app:layout_constraintStart_toEndOf="@id/buttonEnd"
        app:layout_constraintTop_toBottomOf="@id/underBar"
        app:rowCount="6">

        <com.GrowthPlus.customViews.SubjectCompletionComponent android:id="@+id/numbersCompletionComponent" />

        <com.GrowthPlus.customViews.SubjectCompletionComponent android:id="@+id/lengthCompletionComponent" />

        <com.GrowthPlus.customViews.SubjectCompletionComponent android:id="@+id/unitCompletionComponent" />

        <com.GrowthPlus.customViews.SubjectCompletionComponent android:id="@+id/weightCompletionComponent" />

        <com.GrowthPlus.customViews.SubjectCompletionComponent android:id="@+id/additionCompletionComponent" />

        <com.GrowthPlus.customViews.SubjectCompletionComponent android:id="@+id/moneyCompletionComponent" />

        <com.GrowthPlus.customViews.SubjectCompletionComponent android:id="@+id/subtractionCompletionComponent" />

        <com.GrowthPlus.customViews.SubjectCompletionComponent android:id="@+id/timeCompletionComponent" />

        <com.GrowthPlus.customViews.SubjectCompletionComponent android:id="@+id/multiplicationCompletionComponent" />

        <com.GrowthPlus.customViews.SubjectCompletionComponent android:id="@+id/shapesCompletionComponent" />

        <com.GrowthPlus.customViews.SubjectCompletionComponent android:id="@+id/divisionCompletionComponent" />

        <com.GrowthPlus.customViews.SubjectCompletionComponent android:id="@+id/anglesCompletionComponent" />

    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>