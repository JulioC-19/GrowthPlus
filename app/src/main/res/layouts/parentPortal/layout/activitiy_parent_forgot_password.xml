<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/yellow"
android:id="@+id/parentSignUpActivityID"
tools:context=".ParentSignup">


<!-- Vertical Guidelines -->

<androidx.constraintlayout.widget.Guideline
    android:id="@+id/forgotPasswordStart"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintGuide_percent="0.08" />

<androidx.constraintlayout.widget.Guideline
    android:id="@+id/forgotPasswordEnd"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintGuide_percent="0.92" />

<androidx.constraintlayout.widget.Guideline
    android:id="@+id/playStart"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintGuide_percent="0.31" />

<androidx.constraintlayout.widget.Guideline
    android:id="@+id/playEnd"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintGuide_percent="0.69" />

<androidx.constraintlayout.widget.Guideline
    android:id="@+id/textStart"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintGuide_percent="0.08" />



<!-- Horizontal guidelines-->

`<androidx.constraintlayout.widget.Guideline
    android:id="@+id/forgotPasswordTop"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.08" />`

`<androidx.constraintlayout.widget.Guideline
    android:id="@+id/forgotPasswordBottom"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.18" />`

<androidx.constraintlayout.widget.Guideline
    android:id="@+id/phoneNumberTop"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.25" />

<androidx.constraintlayout.widget.Guideline
    android:id="@+id/phoneNumberBottom"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.30" />

<androidx.constraintlayout.widget.Guideline
    android:id="@+id/phoneNumberETTop"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.34" />

<androidx.constraintlayout.widget.Guideline
    android:id="@+id/phoneNumberETBottom"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.41" />

<androidx.constraintlayout.widget.Guideline
    android:id="@+id/yourPinIsTop"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.45" />

<androidx.constraintlayout.widget.Guideline
    android:id="@+id/yourPinIsBottom"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.50" />

<androidx.constraintlayout.widget.Guideline
    android:id="@+id/pinTop"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.52" />

<androidx.constraintlayout.widget.Guideline
    android:id="@+id/pinBottom"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.591" />

<androidx.constraintlayout.widget.Guideline
    android:id="@+id/playTop"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.67" />

<androidx.constraintlayout.widget.Guideline
    android:id="@+id/playBottom"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.73" />

<androidx.constraintlayout.widget.Guideline
    android:id="@+id/backToLoginTop"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.80" />

<androidx.constraintlayout.widget.Guideline
    android:id="@+id/backToLoginBottom"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.85" />

    <TextView
        android:id="@+id/forgotPasswordTitle"
        android:layout_width="330dp"
        android:layout_height="70dp"
        android:background="@drawable/round_button"
        android:backgroundTint="@color/light_green"
        android:gravity="center_horizontal|center_vertical"
        android:text="FORGOT PASSWORD"
        android:textColor="@color/dark_green"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@id/forgotPasswordBottom"
        app:layout_constraintEnd_toStartOf="@id/forgotPasswordEnd"
        app:layout_constraintStart_toEndOf="@id/forgotPasswordStart"
        app:layout_constraintTop_toBottomOf="@id/forgotPasswordTop"></TextView>

    <TextView
        android:id="@+id/phoneNumberText"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:text="Phone number:"
        android:textColor="@color/blue"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@id/phoneNumberBottom"
        app:layout_constraintEnd_toStartOf="@id/forgotPasswordEnd"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/forgotPasswordStart"
        app:layout_constraintTop_toBottomOf="@id/phoneNumberTop"
        app:layout_constraintVertical_bias="1.0"></TextView>

    <EditText
    android:id="@+id/phoneNumberInput"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:background="@drawable/round_button"
    android:backgroundTint="@color/grey"
    android:hint="###-###-####"
    android:inputType="number"
    android:maxLength="11"
    android:textAlignment="center"
    android:textSize="20sp"
    app:layout_constraintBottom_toTopOf="@id/phoneNumberETBottom"
    app:layout_constraintEnd_toStartOf="@id/forgotPasswordEnd"
    app:layout_constraintStart_toEndOf="@id/forgotPasswordStart"
    app:layout_constraintTop_toBottomOf="@id/phoneNumberETTop"></EditText>

<TextView
    android:id="@+id/yourPinIsText"
    android:layout_width="330dp"
    android:layout_height="wrap_content"
    android:text="Your pin is:"
    android:textColor="@color/blue"
    android:textSize="25sp"
    app:layout_constraintBottom_toTopOf="@id/yourPinIsBottom"
    app:layout_constraintEnd_toStartOf="@id/forgotPasswordEnd"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toEndOf="@id/forgotPasswordStart"
    app:layout_constraintTop_toBottomOf="@id/yourPinIsTop"></TextView>


    <TextView
        android:id="@+id/pinText"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text=""
        android:textColor="@color/black"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@id/pinBottom"
        app:layout_constraintEnd_toStartOf="@id/forgotPasswordEnd"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/forgotPasswordStart"
        app:layout_constraintTop_toBottomOf="@id/pinTop"></TextView>

    <android.widget.Button
    android:id="@+id/parentGetPinBtn"
    android:layout_width="150dp"
    android:layout_height="48dp"
    android:background="@drawable/round_button"
    android:backgroundTint="@color/dark_green"
    android:drawableStart="@drawable/play_large"
    android:paddingStart="60dp"
    app:layout_constraintTop_toBottomOf="@id/playTop"
    app:layout_constraintBottom_toTopOf="@id/playBottom"
    app:layout_constraintStart_toEndOf="@id/playStart"
    app:layout_constraintEnd_toStartOf="@id/playEnd"
    />

<android.widget.Button
    android:id="@+id/backToLoginButton"
    android:layout_width="100dp"
    android:layout_height="42dp"
    android:background="@drawable/round_button"
    android:backgroundTint="@color/dark_green"
    android:drawableStart="@drawable/back_arrow"
    android:paddingStart="38dp"
    app:layout_constraintBottom_toTopOf="@id/backToLoginBottom"
    app:layout_constraintEnd_toStartOf="@id/forgotPasswordEnd"
    app:layout_constraintStart_toStartOf="@id/forgotPasswordStart"
    app:layout_constraintTop_toBottomOf="@id/backToLoginTop"/>

