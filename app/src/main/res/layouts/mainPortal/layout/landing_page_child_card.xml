<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/landingPageChildColor"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/yellow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.26" />

    <ImageView
        android:id="@+id/landingPageChildAvatar"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:scaleX="0.85"
        android:scaleY="0.85"
        android:src="@mipmap/bunny_foreground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.26" />

    <TextView
        android:id="@+id/landingPageChildName"
        android:layout_width="115dp"
        android:layout_height="40dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/round_button"
        android:backgroundTint="@color/grey"
        android:gravity="center"
        android:text="Sally"
        android:textAlignment="center"
        android:textColor="@color/dark_green"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/landingPageChildAvatar"
        app:layout_constraintStart_toStartOf="@+id/landingPageChildAvatar"
        app:layout_constraintTop_toTopOf="@+id/landingPageChildAvatar" />

</androidx.constraintlayout.widget.ConstraintLayout>