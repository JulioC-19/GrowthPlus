<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/landingPageChildAvatar"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="36dp"
        android:background="@drawable/circle_background"
        android:backgroundTint="@color/blue"
        android:src="@mipmap/bunny_foreground"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/landingPageChildName"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_marginTop="75dp"
        android:background="@drawable/background_rectangle_round_border"
        android:backgroundTint="@color/grey"
        android:gravity="center"
        android:text="Sally"
        android:textAlignment="center"
        android:textColor="@color/dark_green"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/landingPageChildAvatar"
        app:layout_constraintStart_toStartOf="@+id/landingPageChildAvatar"
        app:layout_constraintTop_toTopOf="@+id/landingPageChildAvatar" />

</androidx.constraintlayout.widget.ConstraintLayout>