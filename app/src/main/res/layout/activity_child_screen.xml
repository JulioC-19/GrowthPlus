<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_green"
    tools:context=".childScreen">


    <android.widget.Button
        android:id="@+id/back_button"
        android:layout_width="60sp"
        android:layout_height="40sp"
        android:background="@drawable/round_button"
        android:drawableStart="@drawable/back_arrow"
        android:paddingStart="17sp"
        android:paddingEnd="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/childAvatar"
        app:layout_constraintHorizontal_bias="0.177"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.019"></android.widget.Button>

    <android.widget.Button
        android:id="@+id/deleteChildButton"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:background="@drawable/minimize_button"
        android:scaleX="0.7"
        android:scaleY="0.7"
        android:gravity="center_horizontal|center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.951"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.019" />


    <com.GrowthPlus.customViews.ChildAvatarComponent
        android:id="@+id/childAvatar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.139" />

    <com.GrowthPlus.customViews.ChildNameScoreComponent
        android:id="@+id/childNameAndScore"
        android:layout_width="250dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/childAvatar"
        app:layout_constraintVertical_bias="0.063" />

    <com.GrowthPlus.customViews.HorizontalProgressBar
        android:id="@+id/horizontalProgressBarLevelOne"
        android:layout_width="300dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.559"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.473" />

    <com.GrowthPlus.customViews.HorizontalProgressBar
        android:id="@+id/horizontalProgressBarLevelTwoo"
        android:layout_width="300dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.559"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.537"
        />

    <com.GrowthPlus.customViews.HorizontalProgressBar
        android:id="@+id/horizontalProgressBarLevelThree"
        android:layout_width="300dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.559"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.599" />

    <com.GrowthPlus.customViews.HorizontalProgressBar
        android:id="@+id/horizontalProgressBarLevelFourr"
        android:layout_width="300dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.559"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.657"/>

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/contentAreasGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@color/blue"
        app:columnCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.924"
        app:rowCount="6">

        <com.GrowthPlus.customViews.SubjectCompletionComponent
            android:id="@+id/numbersCompletionComponent"
            android:layout_width="140dp"
            android:layout_height="35dp" />

        <com.GrowthPlus.customViews.SubjectCompletionComponent
            android:id="@+id/lengthCompletionComponent"
            android:layout_width="140dp"
            android:layout_height="35dp" />

        <com.GrowthPlus.customViews.SubjectCompletionComponent
            android:id="@+id/countingCompletionComponent"
            android:layout_width="140dp"
            android:layout_height="35dp" />

        <com.GrowthPlus.customViews.SubjectCompletionComponent
            android:id="@+id/weightCompletionComponent"
            android:layout_width="140dp"
            android:layout_height="35dp" />

        <com.GrowthPlus.customViews.SubjectCompletionComponent
            android:id="@+id/additionCompletionComponent"
            android:layout_width="140dp"
            android:layout_height="35dp" />

        <com.GrowthPlus.customViews.SubjectCompletionComponent
            android:id="@+id/moneyCompletionComponent"
            android:layout_width="140dp"
            android:layout_height="35dp" />

        <com.GrowthPlus.customViews.SubjectCompletionComponent
            android:id="@+id/subtractionCompletionComponent"
            android:layout_width="140dp"
            android:layout_height="35dp" />

        <com.GrowthPlus.customViews.SubjectCompletionComponent
            android:id="@+id/timeCompletionComponent"
            android:layout_width="140dp"
            android:layout_height="35dp" />

        <com.GrowthPlus.customViews.SubjectCompletionComponent
            android:id="@+id/multiplicationCompletionComponent"
            android:layout_width="140dp"
            android:layout_height="35dp" />

        <com.GrowthPlus.customViews.SubjectCompletionComponent
            android:id="@+id/shapesCompletionComponent"
            android:layout_width="140dp"
            android:layout_height="35dp" />

        <com.GrowthPlus.customViews.SubjectCompletionComponent
            android:id="@+id/divisionCompletionComponent"
            android:layout_width="140dp"
            android:layout_height="35dp" />

        <com.GrowthPlus.customViews.SubjectCompletionComponent
            android:id="@+id/anglesCompletionComponent"
            android:layout_width="140dp"
            android:layout_height="35dp" />


    </androidx.gridlayout.widget.GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>