<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateAccount">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/ParentPortalGridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:columnCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rowCount="3">

        <ImageView
            android:id="@+id/bunnyOption"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@color/blue"
            android:src="@mipmap/bunny_foreground">

        </ImageView>

        <ImageView
            android:id="@+id/elephantOption"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@color/orange"
            android:src="@mipmap/elephant_foreground">

        </ImageView>

        <ImageView
            android:id="@+id/birdOption"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@color/light_green"
            android:src="@mipmap/guinea_fowl_foreground">

        </ImageView>

        <ImageView
            android:id="@+id/camelOption"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@color/red"
            android:src="@mipmap/camel_foreground">

        </ImageView>

        <ImageView
            android:id="@+id/giraffeOption"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@color/dark_green"
            android:src="@mipmap/giraffe_foreground">

        </ImageView>

        <ImageView
            android:id="@+id/squirrelOption"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@color/yellow"
            android:src="@mipmap/squirrel_foreground">

        </ImageView>

    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>