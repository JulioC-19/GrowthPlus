<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateAccount"
    android:background="@color/dark_green">

    <android.widget.Button
        android:id="@+id/backCreateAccount"
        android:layout_width="60sp"
        android:layout_height="40sp"
        android:layout_marginTop="30sp"
        android:layout_marginStart="20sp"
        android:background="@drawable/round_button"
        android:drawableStart="@drawable/back_arrow"
        android:backgroundTint="@color/blue"
        android:paddingStart="17sp"
        android:paddingEnd="20sp">
    </android.widget.Button>

    <ImageView
        android:id="@+id/createChildAccount"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/circle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:backgroundTint="@color/blue">
    </ImageView>
    <ImageView
        android:id="@+id/avatarImg"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleX="1.3"
        android:scaleY="1.3"
        android:background="@mipmap/bunny_foreground"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp">
    </ImageView>
    <EditText
        android:id="@+id/nameInput"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:layout_below="@id/createChildAccount"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:hint="Name"
        android:textSize="30dp"
        android:backgroundTint="@color/grey"
        android:textAlignment="center"
        android:background="@drawable/round_button">
    </EditText>
    <android.widget.Button
        android:id="@+id/loginBtn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_button"
        android:backgroundTint="@color/blue"
        android:drawableStart="@drawable/play_large"
        android:paddingStart="60dp"
        android:layout_below="@id/nameInput"
        ></android.widget.Button>
</RelativeLayout>


