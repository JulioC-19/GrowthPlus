<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/unitShape"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background= "@drawable/round_button"
        android:backgroundTint= "@color/light_green"/>

    <TextView
        android:id="@+id/unitNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="@color/dark_green"
        android:textSize="60sp"
        app:layout_constraintTop_toTopOf="@+id/unitShape"
        app:layout_constraintBottom_toBottomOf="@id/unitShape"
        app:layout_constraintRight_toRightOf="@id/unitShape"
        app:layout_constraintLeft_toLeftOf="@id/unitShape"/>
</androidx.constraintlayout.widget.ConstraintLayout>