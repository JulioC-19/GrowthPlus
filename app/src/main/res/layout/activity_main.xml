<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/light_green">
    <ImageButton
        android:id="@+id/langBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/settings_gear"
        android:background="@color/light_green"
        app:tint="@color/dark_green"
        android:scaleY="1.5"
        android:scaleX="1.5"
        android:layout_marginStart="310dp"
        android:paddingTop="5dp">

    </ImageButton>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp">

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/landingPageChildGrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/blue"
            android:background="@drawable/round_button"
            app:columnCount="2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:rowCount="3">

            <com.GrowthPlus.customViews.LandingPageChildCard
                android:layout_width="150dp"
                android:layout_height="120dp"
                app:avatarBackgroundColor="@color/red"
                app:avatarSrc="@mipmap/camel_foreground"
                app:childName="Sue"
                app:nameBackgroundColor="@color/red" />

            <com.GrowthPlus.customViews.LandingPageChildCard
                android:layout_width="150dp"
                android:layout_height="120dp"
                app:avatarBackgroundColor="@color/yellow"
                app:avatarSrc="@mipmap/squirrel_foreground"
                app:childName="John"
                app:nameBackgroundColor="@color/yellow" />

            <com.GrowthPlus.customViews.LandingPageChildCard
                android:layout_width="150dp"
                android:layout_height="120dp"
                app:avatarBackgroundColor="@color/light_green"
                app:avatarSrc="@mipmap/guinea_fowl_foreground"
                app:childName="Chad"
                app:nameBackgroundColor="@color/light_green" />

            <com.GrowthPlus.customViews.LandingPageAddChild
                android:layout_width="150dp"
                android:layout_height="122dp" />

        </androidx.gridlayout.widget.GridLayout>

        <FrameLayout
            android:id="@+id/idFrame"
            android:layout_marginTop="50dp"
            android:layout_width="310dp"
            android:layout_height="170dp"
            android:backgroundTint="@color/blue"
            android:background="@drawable/round_button"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:layout_centerHorizontal="true">

            <ImageButton
                android:id="@+id/idParent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/round_button"
                android:layout_marginTop="-20dp"
                android:scaleX="1.15"
                android:scaleY="1.15"
                android:src="@mipmap/parent_foreground" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="57dp"
                android:clickable="false"
                android:text="parent"
                android:textColor="@color/dark_green"
                android:textSize="30dp" />
        </FrameLayout>

    </LinearLayout>


</RelativeLayout>